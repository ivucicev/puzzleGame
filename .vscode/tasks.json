{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "cmd",
    "isShellCommand": true,
    "args": ["/c"],
    "showOutput": "always",
    "tasks": [{
        "taskName": "tsc",
        "version": "0.1.0",
        "command": "tsc",
        "isShellCommand": true,
        "isBuildCommand": true,
        "args": ["-p", "."],
        "showOutput": "silent",
        "problemMatcher": "$tsc"
    }, {
        "taskName": "reload",
        "version": "0.1.0",
        "command": "explorer",
        "windows": {
            "command": "explorer.exe"
        },
        "args": ["index.html"]
    }]
}